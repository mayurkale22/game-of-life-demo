        "@com_google_code_findbugs_jsr305//jar",
        "@com_google_guava_guava//jar",
        "@com_google_protobuf_java//:protobuf_java",
        "@com_google_protobuf_java//:protobuf_java_util",
        "@com_google_auth_credentials//jar",
        "@com_google_auth_oauth2_http//jar",
        "@grpc_java//core",
        "@grpc_java//netty",
        "@grpc_java//protobuf",
        "@grpc_java//stub",
        "@io_grpc_services//jar",
        "@io_opencensus_opencensus_contrib_grpc_metrics//jar",
        "@io_opencensus_exporter_stats_stackdriver//jar",
        "@io_opencensus_contrib_zpages//jar"
    ],
    runtime_deps = [
        "@io_netty_codec_http2//jar",
        "@io_netty_tcnative_boringssl_static//jar",
        "@com_google_api_client//jar",
        "@com_google_api_http_client_jackson2//jar",
        # "@com_google_api_client_util//jar",
        "@com_google_api_common//jar",
        "@com_google_api_gax//jar",
        "@com_google_api_gax_grpc//jar",
        "@com_google_cloud_core//jar",
        "@com_google_cloud_monitoring//jar",
        "@com_google_api_grpc_cloud_monitoring//jar",
        "@com_google_api_proto_cloud_monitoring//jar",
        "@com_google_api_http_client//jar",
        "@com_lmax_disruptor//jar",
        "@grpc_java//netty",
        "@io_grpc_auth//jar",
        "@io_opencensus_impl//jar",
        "@io_opencensus_impl_core//jar",
        "@org_threeten_threetenbp//jar",
        "@com_fasterxml_jackson_core_jackson_core//jar",
        "@org_eclipse_jetty_alpn//jar",
        "@org_json//jar",
    ],
)

java_binary(
    name = "game-of-life-client",
    testonly = 1,
    main_class = "io.opencensus.example.gameoflife.GameOfLifeClient",
    runtime_deps = [
        ":gameoflife",
    ],
)

java_binary(
    name = "game-of-life-server",
    testonly = 1,
    main_class = "io.opencensus.example.gameoflife.GameOfLifeServer",
    runtime_deps = [
        ":gameoflife",
    ],
)
